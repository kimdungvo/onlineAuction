@model eProject.ViewModel.ViewAuctionWin;
@{
    TempData["Title"] = "Report";
}

<div>
    <div class="container" style="margin-top:9%;margin-bottom:7%">
        <h1 style="color: goldenrod; font-weight: bold; text-align:center">Auction Report</h1>
        <h6 style="color:darkcyan; font-weight:bold; margin-left:11%">Product of the auction: @Model.Auction.Title</h6>
        <h4 style="color:rebeccapurple; font-weight:bold; margin-left:11%">Auction posted by: @Model.Seller.Email</h4>
        <form asp-action="AddReport" asp-controller="PageAuction" method="post" style="background-color: #efefef; border-radius: 10px; margin-left: 11%; margin-right: 11% ">
            <label style=" margin-top: 7%"></label>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="auctionid" value="@Model.Auction.AuctionId" />
            <input type="hidden" name="winnerid" value="@Model.Winner.WinnerId" />
            <h4 style="color: firebrick; margin-left: 10%">@TempData["message"]</h4>
            <div class="form-group" style="margin-left: 10%; margin-right: 10%">
                <textarea rows="7" class="form-control" name="report" required></textarea>
                <label class="control-lable" style="font-style:italic; color:red">* In the case you paid but don't receive product or anything about product, please send report to Admin </label>
                <input type="submit" value="Send" class="btn btn-success" style="margin-bottom: 7%" />
                <a href="~/PageAuction/Details/@Model.Auction.AuctionId" class="btn btn-danger" style="text-decoration: none; margin-bottom: 7%">Back to Auction Detail</a>
            </div>
        </form>
    </div>
</div>